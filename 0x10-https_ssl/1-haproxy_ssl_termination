global
	log 127.0.0.1 local0 notice
	maxconn 2000
	user haproxy
	group haproxy
defaults
	log     global
	mode    http
	option  forwardfor
	option  http-server-close
	retries 3
	option redispatch
	timeout connect  5000
	timeout client  10000
	timeout server  10000
listen hbnb
	bind 0.0.0.0:443
	mode http
	stats enable
	stats uri /haproxy?stats
	balance roundrobin
	option httpclose
	option forwardfor
	server 342547-web-01 34.207.188.7:80 check
	server 342547-web-02 100.25.164.40:80 check
	option  forwardfor
	option  http-server-close

frontend www-http
	bind   3.236.20.125:80
	reqadd X-Forwarded-Proto:\ http
	default_backend www-backend

frontend www-https
	bind   3.236.20.125:443 ssl crt /etc/haproxy/certs/www.raphaelkariuki.tech.pem
	reqadd X-Forwarded-Proto:\ https
	acl letsencrypt-acl path_beg /.well-known/acme-challenge/
	use_backend letsencrypt-backend if letsencrypt-acl
	default_backend www-backend

backend www-backend
	redirect scheme https if !{ ssl_fc }
	server 342547-web-01 34.207.188.7:80 check
	server 342547-web-02 100.25.164.40:80 check

backend letsencrypt-backend
	server letsencrypt 127.0.0.1:54321
